<% content_for :title do @show.title + " - " end %>

<article id="<%= @show.slug %>" class="vevent">
  <header>
    <h1><a href="<%= request.url %>" class="summary url noprint"><%= @show.title%></a></h1>
    <h2><time datetime="<%= @show.date_and_time %>" class="dtstart"><%= @show.date_to_s%> <span>at <%= @show.time_to_s.downcase %></time> &#8212; 
      <%= "<a href='#{@show.venue_url}'>" unless @show.venue_url.nil? || @show.venue_url.empty? %>
        <span class="location"><%= @show.venue %></span>
      <%= "</a>" unless @show.venue_url.nil? || @show.venue_url.empty? %>
      <div class="fb-like" data-href="<%= request.url %>" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true">
  </header>
  <div class="show-description description">
    <a href="<%= @show.image1.url %>" class="fancybox image1 noprint"><img src="<%= @show.image1.medium.url %>" alt="SpyBoy - Folk, roots, blues and acoustic music in East Sussex - <%= @show.title %>" /></a>
    <%= @show.description %>
    <a href="<%= @show.image2.url %>" class="fancybox image2 noprint"><img src="<%= @show.image2.medium.url %>" alt="SpyBoy - Folk, roots, blues and acoustic music in East Sussex - <%= @show.title %>" /></a>
  </div>
</article>
<%= erb :_sidebar %>